    sub "ফ", "pha"
    sub "ব", "ba"
    sub "ভ", "bha"
    sub "ম", "ma"

    #Semivowels
    sub "য়", "ya"
    sub "য", "ẏa"
    sub "য়", "ẏa"
    sub "ৰ", "ra"
    sub "ল", "la"
    sub "ৱ", "wa"

    #Sibilants
    sub "শ", "śa"
    sub "ষ", "sha"
    sub "স", "sa"

    #Aspirate
    sub "হ", "ha"


    # Anusvāra
    sub "ং", "ṃ"

    # Bisarga
    sub "ঃ", "ḥ"

    # Candrabindu (see Note 3)
    sub "ঁ", "m̐"

    # Abagraha  (see Note 4)
    sub "ऽ", "’" # (apostrophe)

    # Medials # Needed for connecting constants
    sub "\u09be", "ā"
    sub "\u09bf", "i"
    sub "\u09c0", "ī"
    sub "\u09c1", "u"
    sub "\u09c2", "ū"
    sub "\u09c3", "ṛ"
    sub "\u09c7", "e"
    sub "\u09c8", "ai"
    sub "\u09cb", "o"
    sub "\u09cc", "au"
    sub "।", "."
    sub "्", ""
    sub "\u09CD", "" # Used for joining

    # Digits

    sub "১", "1"
    sub "২", "2"
    sub "৩", "3"
    sub "৪", "4"
    sub "৫", "5"
    sub "৬", "6"
    sub "৭", "7"
    sub "৮", "8"
    sub "৯", "9"
    sub "০", "0"
  }

