  # CHARACTERS
  parallel {

    #Vowels and Diphthongs (see Note 1)

    sub "অ", "a"
    sub "আ", "ā"
    sub "ই", "i"
    sub "ঈ", "ī"
    sub "উ", "u"
    sub "ঊ", "ū"
    sub "ঋ", "ṛ"
    sub "ৠ", "ṝ"
    sub "ঌ", "ḹ"
    sub "এ", "e"
    sub "ঐ", "ai"
    sub "ও", "o"
    sub "ঔ", "au"

    # Consonant characters

    #Gutturals
    sub "ক", "ka"
    sub "খ", "kha"
    sub "গ", "ga"
    sub "ঘ", "gha"
    sub "ঙ", "ṅa"

    #Palatals
    sub "চ", "ca"
    sub "ছ", "cha"
    sub "জ", "ja"
    sub "ঝ", "jha"
    sub "ঞ", "ña"

    #Cerebrals
